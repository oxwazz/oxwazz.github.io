---
import type { TocItem } from "@/utils";

interface Props {
	heading: TocItem;
}

const {
	heading: { slug, text, depth, subheadings },
} = Astro.props;
---

<li class={`${depth > 2 ? "ms-3" : ""}`}>
	<a
		class={`block line-clamp-2 hover:text-accent text-accent/45 transition-all duration-300 hover:underline underline-offset-2 ${depth <= 2 ? "mt-1.5" : "mt-1 text-[0.6875rem]"}`}
		href={`#${slug}`}
		aria-label={`Scroll to section: ${text}`}>{text}</a
	>
	{
		!!subheadings.length && (
			<ul>
				{subheadings.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>
