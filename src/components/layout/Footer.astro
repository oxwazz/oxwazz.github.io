---
import { menuLinks, siteConfig } from "@/site-config";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full max-w-screen-sm flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top text-textColor/50 sm:flex-row sm:justify-between sm:text-xs"
>
	<div class="me-0 sm:me-4">
		<a class="footer-link" href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
			>CC BY-NC-SA 4.0</a
		> 2023-{year}
		<span class="whitespace-nowrap">&copy; {siteConfig.author}</span>
	</div>
	<nav
		aria-label="More on this site"
		class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-textColor/50"
	>
		{
			menuLinks.map((link) => (
				<a
					href={link.path}
					class="whitespace-nowrap px-4 py-2 sm:px-2 sm:py-0 sm:hover:text-textColor/50 sm:hover:underline"
				>
					{link.title}
					{link.path?.startsWith("http") ? (
						<svg
							width="12"
							height="12"
							aria-hidden="true"
							viewBox="0 0 24 24"
							class="-mt-0.5 ml-1.5 inline-block"
						>
							<path
								fill="currentColor"
								d="M21 13v10h-21v-19h12v2h-10v15h17v-8h2zm3-12h-10.988l4.035 4-6.977 7.07 2.828 2.828 6.977-7.07 4.125 4.172v-11z"
							/>
						</svg>
					) : null}
				</a>
			))
		}
	</nav>
</footer>
